{
    "name": "@ludeschersoftware/promise",
    "version": "1.1.0",
    "description": "A minimal utility for observing the lifecycle of a single Promise. It lets you check whether a promise is pending, fulfilled, or rejected, and safely access its result or error without needing extra state handling.",
    "publishConfig": {
        "access": "public"
    },
    "main": "./dist/cjs/index.js",
    "module": "./dist/esm/index.js",
    "types": "./dist/esm/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/cjs/index.js",
            "import": "./dist/esm/index.js",
            "types": "./dist/esm/index.d.ts"
        }
    },
    "scripts": {
        "build:cjs": "tsc --project tsconfig.commonjs.json",
        "build:esm": "tsc --project tsconfig.esnext.json",
        "build": "yarn build:cjs && yarn build:esm",
        "watch": "tsc --watch",
        "test": "jest --passWithNoTests",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ludeschersoftware/JPromise.git"
    },
    "keywords": [
        "promise"
    ],
    "author": "Johannes Ludescher",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ludeschersoftware/JPromise/issues"
    },
    "homepage": "https://github.com/ludeschersoftware/JPromise#readme",
    "devDependencies": {
        "@types/babel__core": "^7.20.5",
        "@types/babel__generator": "^7.27.0",
        "@types/babel__template": "^7.4.4",
        "@types/babel__traverse": "^7.20.7",
        "@types/istanbul-lib-coverage": "^2.0.6",
        "@types/istanbul-lib-report": "^3.0.3",
        "@types/istanbul-reports": "^3.0.4",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.0.10",
        "@types/stack-utils": "^2.0.3",
        "@types/yargs": "^17.0.33",
        "@types/yargs-parser": "^21.0.3",
        "jest": "^30.0.4",
        "jest-environment-jsdom": "^30.0.4",
        "jsdom": "^26.1.0",
        "ts-jest": "^29.4.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2"
    }
}